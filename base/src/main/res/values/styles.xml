<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 全透明 沉浸式主题样式 -->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置状态栏半透明 -->
        <item name="android:windowTranslucentStatus">false</item>
        <!-- 设置底部导航栏半透明，默认false黑色，设置true半透明 -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>
    <!-- 半透明 沉浸式主题样式 -->
    <style name="HalfTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--半透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--半透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SelfDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="showAsDropDown">
        <item name="android:windowEnterAnimation">@anim/self_show_dropdown_open</item>
        <item name="android:windowExitAnimation">@anim/self_show_dropdown_close</item>
    </style>

    <style name="showAsDropUp">
        <item name="android:windowEnterAnimation">@anim/self_show_dropup_open</item>
        <item name="android:windowExitAnimation">@anim/self_show_dropup_close</item>
    </style>

    <style name="showAsDropLeft">
        <item name="android:windowEnterAnimation">@anim/self_show_dropleft_open</item>
        <item name="android:windowExitAnimation">@anim/self_show_dropleft_close</item>
    </style>

    <style name="showAsDropRight">
        <item name="android:windowEnterAnimation">@anim/self_show_dropright_open</item>
        <item name="android:windowExitAnimation">@anim/self_show_dropright_close</item>
    </style>

    <style name="MyTabLayout">
        <item name="tabMyIndicatorPaddingLeft">0dp</item>
        <item name="tabMyIndicatorPaddingRight">0dp</item>
        <item name="tabMyGravity">GRAVITY_FILL</item>
        <item name="tabMyMode">MODE_FIXED</item>
        <item name="tabMyMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabMyIndicatorColor">?attr/colorAccent</item>
        <item name="tabMyIndicatorHeight">2dp</item>
        <item name="tabMyIndicatorSelfFit">true</item>
        <item name="tabMyIndicatorMarginBottomSelfFit">true</item>
        <item name="tabMyPaddingStart">12dp</item>
        <item name="tabMyPaddingEnd">12dp</item>
        <item name="tabMyBackground">?attr/selectableItemBackground</item>
        <item name="tabMyTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabMySelectedTextColor">?android:textColorPrimary</item>
        <item name="tabMyViewNumber">5</item>
    </style>
</resources>
