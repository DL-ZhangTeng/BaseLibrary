<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickTabLayout"
        android:text="onClickTabLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickTabLayout2"
        android:text="onClickTabLayout2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickTree"
        android:text="onClickTree" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickNineImage"
        android:text="onClickNineImage" />

    <com.zhangteng.base.widget.ImageRatingBar
        android:id="@+id/imageRatingBar"
        android:layout_width="88dp"
        android:layout_height="16dp"
        app:irb_horizontalSpace="5dp"
        app:irb_isIndicator="false"
        app:irb_maxRate="10"
        app:irb_rating="10"
        app:irb_star="@drawable/default_star_yellow"
        app:irb_starBackground="@drawable/default_star_grey"
        app:irb_starHeight="16dp"
        app:irb_starWidth="16dp" />

    <com.zhangteng.base.cardview.CardView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#FDC338"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardShadowColorEnd="#00FDC338"
        app:cardShadowColorStart="#ffFDC338"
        app:cardUseCompatPadding="true" />
</LinearLayout>